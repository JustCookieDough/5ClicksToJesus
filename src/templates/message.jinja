{# message.jinja #}

{% extends "template.jinja" %}

{% block style %}
.message-box {
    max-width: 60%;
    background-color: var(--highlight);
    
    padding: .5rem 1rem .5rem;
    border-radius: .5rem;
}
{% endblock style %}

{% block input %}{{page}}{% endblock input %}

{% block content %}
<span class="message-box">{% block message %}{% endblock message %}</span>
{% endblock content %}